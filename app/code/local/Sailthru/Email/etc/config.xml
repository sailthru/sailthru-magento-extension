<config>
    <modules>
        <Sailthru_Email>
            <version>0.2.0</version>
        </Sailthru_Email>
    </modules>
    <global>
        <models>
           <sailthruemail>
                <class>Sailthru_Email_Model</class>
                <resourceModel>sailthruemail_mysql4</resourceModel>
            </sailthruemail>
            <sailthruemail_mysql4>
                <class>Sailthru_Email_Model_Mysql4</class>
                <entities>
                    <email_log><table>sailthruemail_email_log</table></email_log>
                </entities>
            </sailthruemail_mysql4>
            <!--<newsletter>
                <rewrite>
                    <template>Sailthru_Email_Model_Newsletter_Template</template>
                </rewrite>
            </newsletter> -->
            <core>
                <rewrite>
                    <!--<email>Sailthru_Email_Model_Email</email>-->  <!--http://getstarted.sailthru.com/developers/smtp-auth-send-->
                    <email_template>Sailthru_Email_Model_Email_Template</email_template>
                </rewrite>
            </core>
        </models>
        <resources>
            <sailthruemail_setup>
                <setup>
                    <module>Sailthru_Email</module>
                    <class>Sailthru_Email_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sailthruemail_setup>
            <sailthruemail_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sailthruemail_write>
            <sailthruemail_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sailthruemail_read>
        </resources>
        <blocks>
            <sailthruemail>
                <class>Sailthru_Email_Block</class>
            </sailthruemail>
        </blocks> 
        <helpers>
            <sailthruemail>
                <class>Sailthru_Email_Helper</class>
            </sailthruemail>
        </helpers>
    </global>
    <frontend>
        <translate>
            <modules>
                <Sailthru_Email>
                    <files>
                        <default>Sailthru_Email.csv</default>
                    </files>
                </Sailthru_Email>
            </modules>
        </translate>
        <events>
            <customer_register_success>
                <observers>
                    <sailthru_frontend_create_new_cusomer>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>createNewCustomer</method>
                    </sailthru_frontend_create_new_cusomer>
                </observers>
            </customer_register_success>
            <newsletter_subscriber_save_before>
                <observers>
                    <sailthru_subscriber_save_before>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>addSubscriber</method>
                    </sailthru_subscriber_save_before>
                </observers>
            </newsletter_subscriber_save_before>
            <checkout_cart_product_add_after>
                <observers>
                    <sailthru_add_to_cart>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushIncompletePurchaseOrderToSailthru</method>
                    </sailthru_add_to_cart>
                </observers>
            </checkout_cart_product_add_after>
            <checkout_cart_update_items_after>
                <observers>
                    <sailthru_update_cart_items>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushIncompletePurchaseOrderToSailthru</method>
                    </sailthru_update_cart_items>
                </observers>
            </checkout_cart_update_items_after>
            <checkout_cart_product_update_after>
                <observers>
                    <sailthru_update_product>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushIncompletePurchaseOrderToSailthru</method>
                    </sailthru_update_product>
                </observers>
            </checkout_cart_product_update_after>
            <checkout_type_onepage_save_order>
                <observers>
                    <sailthru_checkout_type_onepage_save_order>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushIncompletePurchaseOrderToSailthru</method>
                    </sailthru_checkout_type_onepage_save_order>
                </observers>
            </checkout_type_onepage_save_order>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <sailthru_checkout_controller_onepage_save_shipping_method>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushIncompletePurchaseOrderToSailthru</method>
                    </sailthru_checkout_controller_onepage_save_shipping_method>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
  <!--          <sales_quote_save_after>
                <observers>
                    <sailthru_sales_quote_save_after>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushIncompletePurchaseOrderToSailthru</method>
                    </sailthru_sales_quote_save_after>
                </observers>
            </sales_quote_save_after> -->
            <sales_quote_remove_item>
                <observers>
                    <sailthru_remove_items>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushIncompletePurchaseOrderToSailthru</method>
                    </sailthru_remove_items>
                </observers>
            </sales_quote_remove_item>
            <checkout_submit_all_after>
                <observers>
                    <sailthru_checkout_submit_all_after>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushPurchaseOrderSuccessToSailthru</method>
                    </sailthru_checkout_submit_all_after>
                </observers>
            </checkout_submit_all_after>
    <!--        <checkout_onepage_controller_success_action> 
                <observers>
                    <sailthru_order_success>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushPurchaseOrderSuccessToSailthru</method>
                    </sailthru_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <sailthru_order_success>
                        <class>Sailthru_Email_Model_Observer</class>
                        <method>pushPurchaseOrderSuccessToSailthru</method>
                    </sailthru_order_success>
                </observers>
            </checkout_multishipping_controller_success_action> -->
     </events>
        <layout>
            <updates>
                <sailthruemail>
                    <file>sailthru.xml</file>
                </sailthruemail>
            </updates>
        </layout>
        <routers>
            <sailthruemail>
                <use>standard</use>
                <args>
                    <module>Sailthru_Email</module>
                    <frontName>email</frontName>
                </args>
            </sailthruemail>
     <!--       <checkout>
                <args>
                    <modules>
                        <Sailthru_Email before="Mage_Checkout">Sailthru_Email</Sailthru_Email>
                    </modules>
                </args>
            </checkout> 
            <customer>  
                <args>
                    <modules>
                        <Sailthru_Email before="Mage_Customer">Sailthru_Email</Sailthru_Email>
                    </modules>
                </args>
            </customer> -->
            <newsletter>
                <args>
                    <modules>
                        <Sailthru_Email before="Mage_Newsletter">Sailthru_Email</Sailthru_Email>
                    </modules>
                </args>
            </newsletter>
        </routers>
    </frontend>
   <admin>
        <routers>
            <sailthruemail>
                <use>admin</use>
                <args>
                    <module>Sailthru_Email</module>
                    <frontName>sailthruemail</frontName>
                </args>
            </sailthruemail>
        </routers>
    </admin>
</config>
